{
    "name": "jerodev/laravel-font-awesome",
    "description": "A Laravel package that renders Font Awesome icons server-side",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "Laravel",
        "FontAwesome",
        "svg"
    ],
    "homepage": "https://github.com/jerodev/laravel-font-awesome",
    "authors": [
        {
            "name": "Jeroen Deviaene",
            "email": "jeroen@deviaene.eu",
            "homepage": "https://www.deviaene.eu/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "autoload": {
        "psr-4": {
            "Jerodev\\LaraFontAwesome\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jerodev\\LaraFontAwesome\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jerodev\\LaraFontAwesome\\FontAwesomeServiceProvider"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jerodev/code-styles.git"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "illuminate/support": "7.x",
        "fortawesome/font-awesome": "^5.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "require-dev": {
        "jerodev/code-styles": "dev-master",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "5.x"
    }
}
